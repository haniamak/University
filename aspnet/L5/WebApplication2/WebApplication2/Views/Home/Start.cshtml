@model WebApplication2.Models.HomeStartModel
<!DOCTYPE html>
<html>
<head>
    <title>Deklaracja zadan</title>
</head>
<body>
    <form asp-action="Start" method="post">
        <div>
            <label for="Name">Imię:</label>
            <input type="text" id="Name" name="Name" required /><br />
            <span asp-validation-for="Name" class="text-danger"></span><br />

            <label for="Surname">Nazwisko:</label>
            <input type="text" id="Surname" name="Surname" required /><br />
            <span asp-validation-for="Surname" class="text-danger"></span><br />

            <label for="Subject">Przedmiot:</label>
            <input type="text" id="Subject" name="Subject" required /><br />
            <span asp-validation-for="Subject" class="text-danger"></span><br />

            <label for="SetNumber">Numer zestawu:</label>
            <input type="text" id="SetNumber" name="SetNumber" required /><br />
            <span asp-validation-for="SetNumber" class="text-danger"></span><br />

            <label for="Date">Data:</label>
            <input type="text" id="Date" name="Date" required /><br />
            <span asp-validation-for="Date" class="text-danger"></span><br />

            <h3>Tasks:</h3>
            <table>
                @for (int i = 0; i < Model.Tasks.Count; i++)
                {
                    <tr>
                        <td>Task @(i + 1):</td>
                        <td>
                            @Html.EditorFor(m => m.Tasks[i])
                            <!--<input type="number" asp-for="Model.Tasks[i]" min="0" max="10" style="width: 50px;" />-->
                        </td>
                    </tr>
                }
            </table>
            <br />
            <button type="submit">Potwierdz deklaracje</button>
        </div>
    </form>

</body>
</html>
